% Almost everything is double spaced.
%
\newcommand{\single}{1.0}
\newcommand{\double}{1.8}
\renewcommand{\baselinestretch}{\double}

\newenvironment{singlespaced}{\renewcommand{\baselinestretch}{\single}\normalsize}%
                             {\renewcommand{\baselinestretch}{\double}\normalsize}

% Footnotes are to be single spaced.
%
\let\oldfootnote\footnote%
\renewcommand{\footnote}[1]{%
	\renewcommand{\baselinestretch}{\single}%
	\oldfootnote{#1}%
	\renewcommand{\baselinestretch}{\double}%
}

% Lengthy quotes must also be single spaced.
% We provide a parameter for the citation label too.
%
\let\oldquotation\quotation%
\let\endoldquotation\endquotation
\renewenvironment{quotation}{%
	\renewcommand{\baselinestretch}{\single}%
	\normalsize%
	\begin{oldquotation}%
}{%
	\end{oldquotation}%
	\renewcommand{\baselinestretch}{\double}%
	\normalsize%
}

% Command for creating the thesis title page in accordance with the
% requirements of the School of Graduate Studies.
% For usage example, see thesis.tex.
% Parameters
%  #1 Title
%  #2 Name
%  #3 Degree name
%  #4 Unit
%  #5 Date
%
\newcommand{\thesistitle}[5]{%
	\thispagestyle{empty}
	\begin{center}
		\renewcommand{\baselinestretch}{\single}%
		\textbf{\Large #1}%
		\renewcommand{\baselinestretch}{\double}\\%
		\vspace{1.0cm}%
		by #2\\%
		\vspace{\fill}%
		\copyright\ #2\\%
		\vspace{\fill}%
		A thesis submitted to the \\%
		School of Graduate Studies \\%
		in partial fulfilment of the \\%
		requirements for the degree of \\%
		#3\\%		
		\vspace{\fill}%
		#4\\%
		\vspace{\fill}%
		#5\\%
		\vspace{\fill}%
		St. John's \hfill Newfoundland%
	\end{center}
}
